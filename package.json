{
  "name": "3d-star-map",
  "version": "1.0.0",
  "description": "Interactive 3D Star Map Explorer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Logan",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.2.1"
  },
  "build": {
    "appId": "com.loganstarmap.explorer",
    "productName": "3D Star Map Explorer",
    "copyright": "Copyright Â© 2024 Logan",
    "files": [
      "**/*",
      "!**/node_modules/*",
      "!*.md",
      "!*.py"
    ],
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "your-repo-name"
    },
    "win": {
      "icon": "build/galaxy_map_icon.ico",
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/galaxy_map_icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/galaxy_map_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}